<svg width="100" height="100" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="coinGrad" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#4CAF50;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#2E7D32;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Main coin -->
  <circle cx="50" cy="45" r="25" fill="url(#coinGrad)" stroke="#1B5E20" stroke-width="2"/>
  <circle cx="50" cy="45" r="20" fill="none" stroke="#81C784" stroke-width="1"/>
  
  <!-- Dollar sign -->
  <text x="50" y="55" text-anchor="middle" fill="white" font-family="Arial, sans-serif" font-size="24" font-weight="bold">₹</text>
  
  <!-- Smaller coins -->
  <circle cx="25" cy="30" r="12" fill="url(#coinGrad)" stroke="#1B5E20" stroke-width="1"/>
  <text x="25" y="35" text-anchor="middle" fill="white" font-family="Arial, sans-serif" font-size="12" font-weight="bold">₹</text>
  
  <circle cx="75" cy="35" r="10" fill="url(#coinGrad)" stroke="#1B5E20" stroke-width="1"/>
  <text x="75" y="40" text-anchor="middle" fill="white" font-family="Arial, sans-serif" font-size="10" font-weight="bold">₹</text>
  
  <circle cx="30" cy="70" r="8" fill="url(#coinGrad)" stroke="#1B5E20" stroke-width="1"/>
  <text x="30" y="75" text-anchor="middle" fill="white" font-family="Arial, sans-serif" font-size="8" font-weight="bold">₹</text>
  
  <!-- Discount tag -->
  <g transform="translate(70, 60)">
    <rect x="-8" y="-6" width="16" height="12" rx="2" fill="#FF5722"/>
    <text x="0" y="2" text-anchor="middle" fill="white" font-family="Arial, sans-serif" font-size="8" font-weight="bold">-50%</text>
  </g>
  
  <!-- Sparkles -->
  <g transform="translate(20, 50)">
    <path d="M0,-2 L0.5,-0.5 L2,0 L0.5,0.5 L0,2 L-0.5,0.5 L-2,0 L-0.5,-0.5 Z" fill="#FFD700"/>
  </g>
  <g transform="translate(80, 55)">
    <path d="M0,-1.5 L0.4,-0.4 L1.5,0 L0.4,0.4 L0,1.5 L-0.4,0.4 L-1.5,0 L-0.4,-0.4 Z" fill="#FFD700"/>
  </g>
  
  <!-- "SAVE" text -->
  <text x="50" y="95" text-anchor="middle" fill="#4CAF50" font-family="Arial, sans-serif" font-size="10" font-weight="bold">SAVE</text>
</svg>
