<svg width="100" height="100" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="truckGrad" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#2196F3;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#1976D2;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Truck body -->
  <rect x="10" y="40" width="50" height="25" rx="3" fill="url(#truckGrad)" stroke="#0D47A1" stroke-width="1"/>
  
  <!-- Truck cab -->
  <rect x="60" y="35" width="25" height="30" rx="3" fill="url(#truckGrad)" stroke="#0D47A1" stroke-width="1"/>
  
  <!-- Truck wheels -->
  <circle cx="25" cy="70" r="8" fill="#333" stroke="#666" stroke-width="1"/>
  <circle cx="25" cy="70" r="5" fill="#999"/>
  <circle cx="70" cy="70" r="8" fill="#333" stroke="#666" stroke-width="1"/>
  <circle cx="70" cy="70" r="5" fill="#999"/>
  
  <!-- Truck window -->
  <rect x="62" y="37" width="21" height="15" rx="2" fill="#87CEEB"/>
  
  <!-- Package in truck -->
  <rect x="15" y="45" width="12" height="12" rx="1" fill="#8BC34A"/>
  <rect x="30" y="45" width="12" height="12" rx="1" fill="#8BC34A"/>
  <rect x="45" y="45" width="12" height="12" rx="1" fill="#8BC34A"/>
  
  <!-- Motion lines -->
  <line x1="5" y1="30" x2="15" y2="30" stroke="#666" stroke-width="2" stroke-linecap="round"/>
  <line x1="5" y1="35" x2="12" y2="35" stroke="#666" stroke-width="2" stroke-linecap="round"/>
  <line x1="5" y1="40" x2="10" y2="40" stroke="#666" stroke-width="2" stroke-linecap="round"/>
  
  <!-- "FREE" text -->
  <text x="50" y="90" text-anchor="middle" fill="#4CAF50" font-family="Arial, sans-serif" font-size="10" font-weight="bold">FREE</text>
</svg>
