<svg width="100" height="100" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="clockGrad" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#4CAF50;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#2E7D32;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Clock background -->
  <circle cx="50" cy="50" r="45" fill="url(#clockGrad)" stroke="#1B5E20" stroke-width="2"/>
  <circle cx="50" cy="50" r="35" fill="white" stroke="#333" stroke-width="2"/>
  
  <!-- Clock numbers -->
  <text x="50" y="25" text-anchor="middle" fill="#333" font-family="Arial, sans-serif" font-size="12" font-weight="bold">12</text>
  <text x="75" y="55" text-anchor="middle" fill="#333" font-family="Arial, sans-serif" font-size="12" font-weight="bold">3</text>
  <text x="50" y="80" text-anchor="middle" fill="#333" font-family="Arial, sans-serif" font-size="12" font-weight="bold">6</text>
  <text x="25" y="55" text-anchor="middle" fill="#333" font-family="Arial, sans-serif" font-size="12" font-weight="bold">9</text>
  
  <!-- Clock hands pointing to 1 o'clock -->
  <line x1="50" y1="50" x2="50" y2="30" stroke="#333" stroke-width="3" stroke-linecap="round"/>
  <line x1="50" y1="50" x2="65" y2="40" stroke="#333" stroke-width="2" stroke-linecap="round"/>
  
  <!-- Center dot -->
  <circle cx="50" cy="50" r="3" fill="#333"/>
  
  <!-- "1 HR" text -->
  <text x="50" y="95" text-anchor="middle" fill="#4CAF50" font-family="Arial, sans-serif" font-size="10" font-weight="bold">1 HR</text>
</svg>
