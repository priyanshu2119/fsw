<!-- For now, creating an SVG placeholder that represents MacBook repair services -->
<svg width="1920" height="1080" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#2c3e50;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#34495e;stop-opacity:1" />
    </linearGradient>
  </defs>
  <rect width="1920" height="1080" fill="url(#bg)"/>
  
  <!-- MacBook illustration -->
  <g transform="translate(960, 540)">
    <!-- MacBook base -->
    <rect x="-300" y="50" width="600" height="20" rx="10" fill="#333"/>
    <!-- MacBook screen -->
    <rect x="-280" y="-250" width="560" height="300" rx="15" fill="#333" stroke="#666" stroke-width="3"/>
    <!-- Screen display -->
    <rect x="-260" y="-230" width="520" height="260" rx="5" fill="#000"/>
    <!-- Screen content -->
    <rect x="-240" y="-210" width="480" height="220" rx="3" fill="#f0f0f0"/>
    
    <!-- Apple logo on screen -->
    <g transform="translate(0, -100)">
      <path d="M0 30C0 30 -15 25 -15 15C-15 10 -12 5 0 5C12 5 15 10 15 15C15 25 0 30 0 30Z" fill="#333"/>
      <circle cx="10" cy="12" r="3" fill="white"/>
    </g>
    
    <!-- Keyboard -->
    <rect x="-250" y="20" width="500" height="30" rx="5" fill="#444"/>
    
    <!-- Repair indicators -->
    <g transform="translate(-350, -100)">
      <circle cx="0" cy="0" r="20" fill="#ff6b35"/>
      <text x="0" y="5" text-anchor="middle" fill="white" font-family="Arial, sans-serif" font-size="16" font-weight="bold">!</text>
    </g>
  </g>
  
  <!-- Text overlay -->
  <text x="960" y="200" text-anchor="middle" fill="white" font-family="Arial, sans-serif" font-size="48" font-weight="bold">MacBook &amp; iMac Repair</text>
  <text x="960" y="260" text-anchor="middle" fill="rgba(255,255,255,0.9)" font-family="Arial, sans-serif" font-size="24">Hardware &amp; Software Solutions</text>
</svg>
